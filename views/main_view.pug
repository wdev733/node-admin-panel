include mixin_smallbox_with_icon.pug
// Main content
section.content
	// Small boxes (Stat box)
	.row#toprow-stats
		style(type='text/css').
			div#toprow-stats div.small-box div.overlay{position: absolute;width: 100%;height: 100%;top: 0; left: 0;z-index: 50;background: rgba(255,255,255,0.7);}
			div#toprow-stats div.small-box div.overlay i{position: absolute;top: 50%;left: 50%;margin-left: -15px;margin-top: -15px;color: #000;font-size: 30px;}
		.col-lg-3.col-xs-12
			// small box
			+smallbox_with_icon("ads_blocked_today","DNS Queries Blocked Today","ion-android-hand")(class="bg-aqua")
		// ./col
		.col-lg-3.col-xs-12
			// small box
			+smallbox_with_icon("dns_queries_today","DNS Queries Today","ion-earth")(class="bg-green")
		// ./col
		.col-lg-3.col-xs-12
			// small box
			+smallbox_with_icon("ads_percentage_today","Of Today's Queries Were Blocked","ion-pie-graph")(class="bg-yellow")
		// ./col
		.col-lg-3.col-xs-12
			// small box
			+smallbox_with_icon("domains_being_blocked","Domains Being Blocked","ion-ios-list")(class="bg-red")
		// ./col
	.row
		.col-md-12
			#queries-over-time.box
				.box-header.with-border
					h3.box-title Queries over time
				.box-body
					.chart
						canvas#queryOverTimeChart(width='800', height='250')
				.overlay
					i.fa.fa-refresh.fa-spin
				// /.box-body
	if PCONFIG.user.authenticated
		.row
			.col-md-6
				#query-types.box
					.box-header.with-border
						h3.box-title Query Types
					.box-body
						.chart
							canvas#queryTypeChart(width='400', height='200')
					.overlay
						i.fa.fa-refresh.fa-spin
					// /.box-body
			.col-md-6
				#forward-destinations.box
					.box-header.with-border
						h3.box-title Forward Destinations
					.box-body
						.chart
							canvas#forwardDestinationChart(width='400', height='200')
					.overlay
						i.fa.fa-refresh.fa-spin
					// /.box-body
		.row
			div(class=PCONFIG.boxedLayout?'col-md-6':'col-md-6 col-lg-4')
				#domain-frequency.box
					.box-header.with-border
						h3.box-title Top Domains
					// /.box-header
					.box-body
						.table-responsive
							table.table.table-bordered
								tbody
									tr
										th Domain
										th Hits
										th Frequency
					.overlay
						i.fa.fa-refresh.fa-spin
					// /.box-body
				// /.box
			// /.col
			div(class=PCONFIG.boxedLayout?'col-md-6':'col-md-6 col-lg-4')
				#ad-frequency.box
					.box-header.with-border
						h3.box-title Top Advertisers
					// /.box-header
					.box-body
						.table-responsive
							table.table.table-bordered
								tbody
									tr
										th Domain
										th Hits
										th Frequency
					.overlay
						i.fa.fa-refresh.fa-spin
					// /.box-body
				// /.box
			// /.col
			div(class=PCONFIG.boxedLayout?'col-md-6':'col-md-6 col-lg-4')
				#client-frequency.box
					.box-header.with-border
						h3.box-title Top Clients
					// /.box-header
					.box-body
						.table-responsive
							table.table.table-bordered
								tbody
									tr
										th Client
										th Requests
										th Frequency
					.overlay
						i.fa.fa-refresh.fa-spin
					// /.box-body
				// /.box
			// /.col
		// /.row
